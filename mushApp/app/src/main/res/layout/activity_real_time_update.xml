<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:backgroundTint="?attr/colorButtonNormal"
    tools:context=".RealTimeUpdate">


    <ProgressBar
        android:id="@+id/progress_barHu"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="212dp"
        android:layout_height="204dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        tools:progress="60" />

    <ProgressBar
        android:id="@+id/progress_barTemp"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="212dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906"
        tools:progress="60" />

    <TextView
        android:id="@+id/textViewFan"
        android:layout_width="337dp"
        android:layout_height="94dp"
        android:layout_marginBottom="40dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progress_barHu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/textViewHu"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progress_barHu"
        app:layout_constraintEnd_toEndOf="@+id/progress_barHu"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/progress_barHu"
        app:layout_constraintTop_toTopOf="@+id/progress_barHu"
        app:layout_constraintVertical_bias="0.496" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="144dp"
        android:layout_height="58dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progress_barTemp"
        app:layout_constraintEnd_toEndOf="@+id/progress_barTemp"
        app:layout_constraintStart_toStartOf="@+id/progress_barTemp"
        app:layout_constraintTop_toTopOf="@+id/progress_barTemp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="23dp"
        android:text="Humidity"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="27dp"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="147dp"
        android:text="Temperature"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="293dp"
        android:layout_height="33dp"
        android:text="Real Time Values"
        android:textAlignment="center"
        android:textColor="#1A237E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewFan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

</androidx.constraintlayout.widget.ConstraintLayout>